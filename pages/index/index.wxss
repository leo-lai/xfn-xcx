/**index/index.wxss**/
.l-list-filter{ padding: 20rpx 30rpx; background: #fff; position: fixed; top:0; left: 0; right: 0;}
.l-list-filter .l-rest{overflow: hidden; margin: 0 15rpx; text-align: center;}
.l-list-filter ._item{
  display: inline-block;  margin: 0 20rpx;
}
.l-list-filter .l-icon-6ac{
  font-size: 14rpx; margin:0 0 0 15rpx; opacity: 0.8; vertical-align: 4rpx;
}
.l-list-filter icon{
  -webkit-text-stroke: 2rpx;
}

.l-list-filter ._cont{
  position: absolute;
  top: 100%; left: 0;right: 0;
  background: #fff;
}
.l-list-filter ._cont::after{
  content: ''; position: absolute; background: rgba(0, 0, 0, 0.5);
  left:0; right: 0; height: 100%;
}

.l-list-filter ._price{
  padding:20rpx; overflow: hidden;
}
.l-list-filter ._price text{
  float:left; margin: 2.4%; min-width: 120rpx; width: 20%; text-align: center;
  background: #eee; padding: 20rpx 30rpx;
}

.l-list-car{margin-top: 128rpx;}
.l-list-car ._item{ background: #fff; margin: 30rpx 0; }
.l-list-car ._item image{ width: 100%; height: 300rpx; }
.l-list-car ._item ._tit{font-weight: 500; font-size: 34rpx;}
.l-list-car ._item ._price1{color: #999;}
.l-list-car ._item ._price2{color: #ff9247; margin-top: 20rpx;}
.l-list-car ._item ._price2 text{font-size: 40rpx; font-weight: 600; margin: 0 20rpx;}


