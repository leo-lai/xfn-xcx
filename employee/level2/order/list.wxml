<!--level2/order/list.wxml-->
<import src='../../template/loadmore.wxml' />
<view style='padding-top: 100rpx;' class='l-page-full'>
  <view class='l-list-filter' catchtouchmove='noopFn'>
    <view class='_input l-flex-hc'>
      <view class='l-rest'>
        <input bindinput='filterTyping' confirm-type='search' bindconfirm='search' placeholder='按订单号或车型查询' value='{{filter.data.keywords}}'/>
      </view>
      <icon class='l-margin-r-m' hidden='{{filter.data.keywords === ""}}' type='cancel' color='#ccc' size='20' bindtap='clearTyping'></icon>
      <icon type='search' size='18' color='#555' bindtap='search'></icon>
    </view>
  </view>

  <!-- 订购单列表 -->
  <view class='l-order-list-item' wx:for='{{list.data}}' wx:key='{{orderCode}}'>
    <view class='_hd'>
      <text class='l-fr l-text-theme'>{{item.orderStateName}}</text>
      <text>订单号 {{item.orderCode}}</text>
    </view>
    <view class='_bd' wx:if='{{item.infos.length > 0}}'>
      <view class='_car' wx:for='{{item.infos}}' wx:for-item='carItem' wx:key='id'>
        <view>{{carItem.carsName}}</view>
        <view class='l-flex-hc'>
          <view class='l-rest l-text-gray'>
            <text class='l-margin-r'>车身颜色：{{carItem.colorName}}</text>
            <text>数量：{{carItem.carNum}}</text>
          </view>

          <block wx:if='{{showEdit}}'>
            <view data-item='{{carItem}}' data-state='{{item.state}}' bindtap='carMatch'>
              <text wx:if='{{item.state == 10}}' class='l-btn-link'>去配车</text>
              <text wx:if='{{item.state == 15}}' class='l-btn-link'>去验车</text>
            </view>
          </block>

          <!-- 主管审核换车申请 -->
          <block wx:if='{{isAdmin && carItem.auditNum > 0}}'>
            <view data-item='{{carItem}}' data-state='{{item.state}}' bindtap='carMatch'>
              <text class='l-btn-link'>去审核</text>
            </view>
          </block>
        </view>
      </view>
    </view>
    <view class='_ft'>
      <navigator wx:if='{{item.state > 1}}' url='contract?id={{item.id}}' hover-class='none'>
        <button size='mini' class='l-button-border'>电子合同</button>
      </navigator>

      <navigator url='info?id={{item.id}}' hover-class='none'>
        <button size='mini' class='l-button-border'>查看详情</button>
      </navigator>

      <!-- 非主管二级 -->
      <block wx:if='{{showEdit}}'>
        <!-- 新建购车单 -->
        <navigator wx:if='{{item.state < 10}}' url='add-order?id={{item.id}}' hover-class='none'>
          <button size='mini' class='l-button-main'>新增订购信息</button>
        </navigator>

        <!-- 配车完成/验车完成 -->
        <view class='l-inline' data-val='{{item.id}}' bindtap='carMatchOk'>
          <button wx:if='{{item.state == 10}}' size='mini' class='l-button-main' data-state='15'>配车完成</button>
          <button wx:if='{{item.state == 15}}' size='mini' class='l-button-main' data-state='35'>验车完成</button>
        </view>
        
        <!-- 出库 -->
        <button wx:if='{{item.state == 40}}' size='mini' class='l-button-main' data-index='{{index}}' bindtap='outCar'>出库</button>
      </block>
    </view>
  </view>
  <template is='loadmore' data='{{...list}}' /> 

  <block wx:if='{{showEdit}}'>
    <view style='height: 120rpx;'></view>
    <view class='l-fixed-bottom'>
      <navigator url='add' class='l-btn-w60 l-margin-tb' hover-class='none'>
        <button class='l-button-main'>新增订购单</button>
      </navigator>
    </view>
  </block>
</view>
