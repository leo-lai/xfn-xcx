<!--pages/customer-list/index.wxml-->
<import src='../../template/loadmore.wxml' />
<view class='l-page-full {{ search.inputShowed ? "l-no-scroll" : "" }}'>
  <view class='l-search-box {{search.inputShowed ? "_doing" : ""}}'>
    <view class='weui-search-bar'>
      <view class='weui-search-bar__form'>
        <view class='weui-search-bar__box'>
          <icon class='weui-icon-search_in-box' type='search' size='14'></icon>
          <input type='text' class='weui-search-bar__input' placeholder='输入手机号码' value='{{search.inputVal}}' focus='{{search.inputShowed}}' bindinput='inputSearchTyping' />
          <view class='weui-icon-clear' wx:if='{{search.inputVal.length > 0}}' bindtap='clearSearchInput'>
            <icon type='clear' size='14'></icon>
          </view>
        </view>
        <label class='weui-search-bar__label' hidden='{{search.inputShowed}}' bindtap='showSearchInput'>
          <icon class='weui-icon-search' type='search' size='14'></icon>
          <view class='weui-search-bar__text'>输入手机号码</view>
        </label>
      </view>
      <view class='weui-search-bar__cancel-btn l-text-theme' hidden='{{!search.inputShowed}}' bindtap='hideSearchInput'>取消</view>
    </view>
    <view class='weui-cells searchbar-result l-scroll' style='height:{{search.height}}px' hidden='{{search.inputVal.length === 0}}'>
      <navigator url='../customer-info/index?ids={{item.customerUsersId}},{{item.customerUsersOrgId}}' class='weui-cell' hover-class='weui-cell_active' wx:for='{{search.list}}' wx:key='customerUsersId'>
        <view class='weui-cell__bd'>{{item.phoneNumber}}</view>
        <view class='weui-cell__ft'>{{item.customerUsersName}}</view>
      </navigator>
      <view class='weui-loadmore l-text-gray' hidden='{{!search.loading}}'>
        <view class='weui-loading'></view>
        <view class='weui-loadmore__tips'>搜索中...</view>
      </view>
      <view class='l-padding l-text-gray l-text-center' hidden='{{search.loading || search.list.length > 0}}'>搜索不到相关数据</view>
    </view>
  </view>


  <!-- <view class='l-text-gray l-fs-s'>当前门店</view> -->
  <!-- 客户列表 -->
  <navigator url='../customer-info/index?ids={{item.customerUsersId}},{{item.customerUsersOrgId}}' class=' l-padding l-bg-white l-margin-m l-radius' wx:for='{{list.data}}' wx:key='{{CustomerUsersId}}'>
    <view class='l-flex-hc l-border-b l-padding-b'>
      <image class='l-avatar' mode='aspectFit' style='width: 40rpx; height: 40rpx; margin-right: 20rpx;' src='{{item.thumb}}'></image>
      <view class='l-h4 l-rest'>{{item.customerUsersName}}</view>
      <text class='l-fs-m'>{{item.phoneNumber}}</text>
    </view>
    <view class='l-text-center'>
      <view class='l-text-gray l-fs-s l-margin-t'>意向/购置车辆</view>
      <view class='l-margin-t-s'>{{item.carsName}}</view>
      <view class='l-text-gray l-fs-s l-margin-t'>购车方案</view>
      <view class='l-margin-t-s'>{{buyWay[item.paymentWay - 1]}}</view>
    </view>
    <view catchtap='noopFn'>
      <view wx:if='{{list.filter.customerType === 0}}' class='l-padding-t l-margin-t l-border-t l-text-center l-text-theme' bindtap='getSalesList' data-item='{{item}}'>分配销售顾问</view>
    </view>
  </navigator>
  <template is='loadmore' data='{{...list}}' />

  <!-- 销售顾问列表 -->
  <view class='l-popup-bottom {{salesList.visible ? "_show" : ""}}' bindtap='closeSalesList'>
    <view class='_inner' catchtap='noopFn'>
      <text class='_close' bindtap='closeSalesList'>×</text>
      <view class='_hd'>
        <text class='l-h4'>选择销售顾问</text>
      </view>
      <view class='_bd' style='min-height: 400rpx;max-height: {{salesList.height}}px; background:#eee;'>
        <view class='weui-cells weui-cells_after-title'>
          <radio-group>
            <label class='weui-cell weui-check__label' wx:for='{{salesList.list}}' wx:key='systemUserId' data-item='{{item}}' bindtap='sltSalesList'>
              <radio class='weui-check' value='{{item.systemUserId}}' checked='{{item.checked}}' />
              <view class='weui-cell__bd'>{{item.systemUserName}}</view>
              <view class='weui-cell__ft weui-cell__ft_in-radio' wx:if='{{item.checked}}'>
                <icon color='#fa5539' class='weui-icon-radio' type='success_no_circle' size='16'></icon>
              </view>
            </label>
          </radio-group>
        </view>
      </view>
    </view>
  </view>

  
</view>