<!--express/tuoyun/list.wxml-->
<import src='/template/loadmore.wxml' />
<view class='l-page-full'>
  <view style='height: 100rpx;'></view>
  <view class='l-list-filter' catchtouchmove='noopFn'>
    <view class='_input l-flex-hc'>
      <view class='l-rest'>
        <input bindinput='filterTyping' confirm-type='search' bindconfirm='search' placeholder='输入订单号/车型/门店查询' value='{{filter.data.keywords}}'/>
      </view>
      <icon class='l-margin-r-m' hidden='{{filter.data.keywords === ""}}' type='cancel' color='#ccc' size='20' bindtap='clearTyping'></icon>
      <icon type='search' size='18' color='#555' bindtap='search'></icon>
    </view>
  </view>

  <navigator class='l-tuoyun-item' url='info?id={{item.consignmentId}}' wx:for='{{list.data}}' wx:key='consignmentId'>
    <view class='l-flex-h'>
      <text class='_tag' wx:if='{{item.consignmentType == 1}}' style='background-color:#00a0ea;'>普通</text>
      <text class='_tag' wx:if='{{item.consignmentType == 2}}'>专线</text>
      <view class='l-rest'>{{item.consignmentCode}}</view>
      <text class='l-text-theme l-fs-s'>{{item.consignmentStateName}}</text>
    </view>
    <view class='l-text-gray l-fs-s l-margin-t-s'>
      <view>起点：{{item.startingPointAddress}}</view>
      <view>终点：{{item.destinationAddress}}</view>
    </view>

    <view class='l-border-t l-fs-s l-margin-t l-padding-tb'>
      <view class='l-flex-h l-margin-b-s' wx:for='{{item.list}}' wx:key='goodsCarId' wx:for-item='carItem'>
        <view class='l-rest'>
          <view>{{carItem.carsName}}</view>
          <view>
            <text>车身颜色：{{carItem.colourName}}</text>
            <text class='l-margin-l' wx:if='{{carItem.frameNumber}}'>车架号：{{carItem.frameNumber}}</text>
          </view>
        </view>
        <text class='l-text-warn'>{{carItem.goodsCarStateName}}</text>
      </view>
    </view>
    <view style='margin-top: -20rpx;'>总运费：{{item.amount}}元</view>
  </navigator>
  <template is='loadmore' data='{{...list}}' />

  <view style='height: 120rpx;'></view>
  <view class='l-fixed-bottom'>
    <navigator url='add' class='l-btn-w60 l-margin-tb' hover-class='none'>
      <button class='l-button-main'>新增托运单</button>
    </navigator>
  </view>
</view>

